<form id="form-ticket" action="ticketsave" class="ui small modal">

    <i class="close icon"></i>

    <div class="header">
      {% if id is defined %}
        Edit Ticket
      {% else %}
        Add new Ticket
      {% endif %}
    </div>

    <div class="ui form content">
      <div class="ui horizontal divider" style="margin-top: 0;">
        Draws
      </div>

      <div class="two fields">
        <div class="field">
          <label>From</label>
          <input class="draw-range" type="text" name="start_draw" value="">
        </div>
        <div class="field">
          <label>To</label>
          <input class="draw-range" type="text" name="end_draw" value="">
        </div>
      </div>


      <div class="ui horizontal divider">
        Columns
      </div>

      {% for i in 1..5 %}
      <div class="seven fields jokernumbers">
        <div class="field">
          <label>{{i}}.</label>
        </div>
        {% for j in 1..5 %}
        <div class="field">
          <input type="text" name="number[{{i}}][{{j}}]" value="">
        </div>
        {% endfor %}
        <div class="field">
          <input type="text" name="number[{{i}}][6]" value="">
        </div>
      </div>
      {% endfor %}

    </div>

    <div class="actions">
      <button type="submit" class="ui green button ok">
        <i class="icon checkmark"></i>
        Save Ticket
      </button>
    </div>

    <script type="text/javascript">
      $(function(){
        var _inputs = $("#form-ticket").find(':input');

        $(".draw-range")
          .on("focus",function(){
            $(this).select();
          })
          .on('keypress',function(e){
            if("0123456789".indexOf(String.fromCharCode(e.which)) < 0){
              return false;
            }

            if($(this).val().length == 3)
            {
              _inputs.eq( _inputs.index(this)+ 1 ).focus();
            }
          });

        $(".jokernumbers input")
          .on("focus",function(){
            $(this).select();
          })
          .on('keypress',function(e){
            if("0123456789".indexOf(String.fromCharCode(e.which)) < 0){
              return false;
            }

            if($(this).val().length == 1)
            {
              _inputs.eq( _inputs.index(this)+ 1 ).focus();
            }
          })
      })
    </script>
</form>
